{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "outDir": "./dist",          // Wo der kompilierte JS-Code hin soll
    "rootDir": "./src",          // Wo dein TS-Code liegt
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}